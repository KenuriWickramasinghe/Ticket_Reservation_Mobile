<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationSummary">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginVertical="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:letterSpacing="0.04"
                android:text="Summary"
                android:textAlignment="center"
                android:textColor="@color/theme"
                android:textSize="24dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/from_id"
                    android:layout_width="186dp"
                    android:layout_height="44dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:text="From"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/to_id"
                    android:layout_width="214dp"
                    android:layout_height="44dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:text="To"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="331dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp">

                    <TextView
                        android:id="@+id/train_name_label"
                        android:layout_width="165dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:paddingLeft="30dp"
                        android:text="Train Name"
                        android:textColor="#878787"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/train_name_value"
                        android:layout_width="214dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text=""
                        android:textSize="18dp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date_label"
                        android:layout_width="164dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:paddingLeft="30dp"
                        android:text="Date"
                        android:textColor="#878787"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/date_value"
                        android:layout_width="214dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text=""
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/dept_time_label"
                        android:layout_width="164dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:paddingLeft="30dp"
                        android:text="Departure Time"
                        android:textColor="#878787"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/dept_time_value"
                        android:layout_width="214dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text=""
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/arrival_time_label"
                        android:layout_width="165dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:paddingLeft="30dp"
                        android:text="Arrival Time"
                        android:textColor="#878787"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/arrival_time_value"
                        android:layout_width="214dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text=""
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tkt_class_label"
                        android:layout_width="165dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:paddingLeft="30dp"
                        android:text="Ticket Class"
                        android:textColor="#878787"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tkt_class_value"
                        android:layout_width="214dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text=""
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tkt_qty_label"
                        android:layout_width="165dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:paddingLeft="30dp"
                        android:text="Ticket Quantity"
                        android:textColor="#878787"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tkt_qty_value"
                        android:layout_width="214dp"
                        android:layout_height="44dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text=""
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <Button
                    android:id="@+id/go_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkblue"
                    android:text="Go Back"
                    android:onClick="gotBackReservation"
                    />

                <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkblue"
                    android:text="Confirm"
                    android:onClick="confirmReservation"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>