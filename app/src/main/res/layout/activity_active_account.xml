<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activeAccount">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:src="@drawable/deactive"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi"
        android:textColor="@color/theme"
        android:textSize="35dp"
        android:textStyle="bold"
        android:letterSpacing="0.04"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenuri Wickramasighe"
        android:textColor="@color/theme"
        android:textSize="20dp"
        android:textStyle="bold"
        android:letterSpacing="0.04"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="You have Deactivate your account Do you want to activate it again?"
        android:textColor="@color/maroon"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="58sp"
        android:text="Request to Active Account"
        android:backgroundTint="@color/darkblue"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginTop="20dp"/>

</LinearLayout>